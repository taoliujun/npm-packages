{
  "name": "taoliujun-npm-packages",
  "version": "1.0.0",
  "description": "taoliujun npm packages",
  "private": true,
  "author": "taoliujun",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@tsconfig/create-react-app": "^1.0.2",
    "@tsconfig/node16-strictest-esm": "^1.0.1",
    "@types/node": "^17.0.35",
    "husky": "^8.0.1",
    "lerna": "^5.0.0",
    "lint-staged": "^12.1.2",
    "typescript": "^4.5.2",
    "yarn-deduplicate": "^5.0.0"
  },
  "scripts": {
    "lerna:version": "lerna version --no-commit-hooks --conventional-commits --include-merged-tags --no-push",
    "lerna:publish": "lerna publish from-package --include-merged-tags",
    "release": "yarn lerna:version && yarn lerna:publish",
    "build": "lerna run build",
    "lint:ts": "lerna run lint:ts",
    "lint": "eslint packages --ext .ts,.js --cache",
    "postinstall": "yarn-deduplicate yarn.lock",
    "prepare": "husky install"
  },
  "dependencies": {
    "@taoliujun/eslint-config": "^1.4.0"
  }
}